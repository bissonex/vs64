{
	"name": "vc65x",
	"displayName": "VC65X",
	"description": "VC65X - A 65XX Development Environment",
	"version": "0.0.0",
	"preview": true,
	"publisher": "bissonex",
	"license": "GPL-3.0",
	"icon": "images/icon_65x2.png",
	"author": {
		"name": "Eric Bissonnette"
	},
	"private": true,
	"engines": {
        "vscode": "^1.70.0"
	},
	"main": "./main.js",
	"bin": "main.js",
	"repository": {
		"type": "git",
		"url": "https://github.com/bissonex/vc65x.git"
	},
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "node ./test/runTest.js",
		"package": "vsce package",
		"deploy": "vsce publish -p"
	},
	"devDependencies": {
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.1",
		"@types/node": "16.x",
		"@types/vscode": "^1.70.0",
		"eslint": "^8.22.0",
		"glob": "^8.0.3",
		"mocha": "^10.0.0",
		"typescript": "^4.7.4",
		"vsce": "~2.10.2",
		"@vscode/test-electron": "^2.1.5"
	},
	"galleryBanner": {
		"color": "#6c9fd2",
		"theme": "light"
	},
	"activationEvents": [
		"onLanguage:asm",
		"onCommand:vc65x.build",
		"onCommand:vc65x.run",
		"onCommand:vc65x.debug",
		"onDebug"
	],
	"categories": [
		"Programming Languages",
		"Snippets",
		"Linters",
		"Debuggers",
		"Formatters"
	],
	"contributes": {
		"views": {
			"debug": [
				{
					"contextualTitle": "VC65X",
					"type": "webview",
					"id": "vc65x.registersView",
					"name": "Programming Model"
				},
				{
					"contextualTitle": "VC65X",
					"type": "webview",
					"id": "vc65x.uiView",
					"name": "65XX System Emulator"
				}
			]
		},
		"commands": [
			{
				"command": "vc65x.build",
				"title": "build",
				"category": "VC65X"
			},
			{
				"command": "vc65x.run",
				"title": "run",
				"category": "VC65X"
			},
			{
				"command": "vc65x.debug",
				"title": "debug",
				"category": "VC65X"
			}
		],
		"languages": [
			{
				"id": "asm",
				"aliases": [
					"6502",
					"asm",
					"acme"
				],
				"extensions": [
					".S",
					".asm",
					".acme",
					".a"
				],
				"configuration": "./language/asm.language.json"
			}
		],
		"grammars": [
			{
				"language": "asm",
				"scopeName": "source.asm",
				"path": "./language/asm.grammar.json"
			}
		],
		"snippets": [
			{
				"language": "asm",
				"path": "./language/asm.snippets.json"
			}
		],
		"configuration": {
			"type": "object",
			"title": "VC65X tools configuration",
			"properties": {
				"vc65x.verbose": {
					"type": "boolean",
					"default": false,
					"description": "Flag to enable verbose output of extension"
				},
				"vc65x.definitions": {
					"type": "string",
					"default": "",
					"description": "Comma-separated list of symbols to define, e.g. A=1,B=4"
				},
				"vc65x.autoBuild": {
					"type": "boolean",
					"default": true,
					"description": "Enable automatic build before running or debugging"
				},
				"vc65x.backgroundBuild": {
					"type": "boolean",
					"default": true,
					"description": "Enable automatic background build after source changes"
				},
				"vc65x.assemblerPath": {
					"type": "string",
					"default": "acme",
					"description": "Path to assembler executable"
				},
				"vc65x.assemblerArgs": {
					"type": "string",
					"default": "",
					"description": "Additional assembler command line options"
				},
				"vc65x.assemblerSearchPath": {
					"type": "string",
					"default": "./",
					"description": "Assembler source search path (use comma to separate items)"
				},
				"vc65x.emulatorPath": {
					"type": "string",
					"default": "x64",
					"description": "Path to emulator executable"
				},
				"vc65x.emulatorArgs": {
					"type": "string",
					"default": "",
					"description": "Additional emulator command line options"
				},
				"vc65x.debuggerEnabled": {
					"type": "boolean",
					"default": false,
					"description": "Flag to enable C64 debugger instead of emulator"
				},
				"vc65x.debuggerPath": {
					"type": "string",
					"default": "c64debugger",
					"description": "Path to C64 debugger executable"
				},
				"vc65x.debuggerArgs": {
					"type": "string",
					"default": "",
					"description": "Additional C64 debugger command line options"
				}
			}
		},
		"breakpoints": [
			{
				"language": "asm"
			}
		],
		"debuggers": [
			{
				"type": "asm",
				"label": "VC65X Debugger",
				"program": "./src/debugger.js",
				"runtime": "node",
				"configurationAttributes": {
					"launch": {
						"required": [
							"binary"
						],
						"properties": {
							"binary": {
								"type": "string",
								"description": "Path to 65X binary",
								"default": ""
							},
							"base": {
								"type": "string",
								"description": "Base address of binary image",
								"default": "$5000"
							},
							"pc": {
								"type": "string",
								"description": "Initial program counter (PC)",
								"default": "$5000"
							},
							"arch": {
								"type": "string",
								"description": "CPU architecture",
								"default": "MCS6502",
								"enum": [
									"MCS6502",
									"R65C02",
									"W65C02S",
									"W65C816S"
								]
							}
						}
					}
				},
				"initialConfigurations": [],
				"configurationSnippets": [
					{
						"label": "VC65X Debugger: Launch",
						"description": "A new configuration for launching the VC65X debugger.",
						"body": {
							"type": "asm",
							"request": "launch",
							"name": "Debug VC65X",
							"binary": "",
							"base": "$5000",
							"pc": "$5000",
							"arch": "MCS6502"
						}
					}
				],
				"variables": {}
			}
		]
	},
	"dependencies": {
		"await-notify": "^1.0.1",
		"@vscode/debugadapter": "^1.57.0"
	}
}
